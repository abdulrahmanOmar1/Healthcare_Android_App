<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LastProjectAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LastProjectAndroid" parent="Base.Theme.LastProjectAndroid" />
    <style name="SCREEN">
        <item
            name="android:background">#FFF</item>
    </style>
    <style name="TEXT">
        <item
            name="android:textColor">#000</item>
    </style>
    <style name="RECTANGLE_ROUND">
        <item
            name="android:background">@drawable/rectangle_round_night</item>
    </style>
    <style name="BUTTON_COLOR">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:backgroundTint">@color/DarkGreen</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TEXT_FIELD">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="SIMPLE_TEXT_COLOR">

        <item name="android:textColor"> @color/black </item>

    </style>
    <style name="SIMPLE_HINT_TEXT_COLOR">

        <item name="android:textColor"> @color/hintcolor </item>

    </style>
    <style name="HEADER_TEXT_COLOR">
        <item name="android:textColor">#279397 </item>
    </style>
    <style name="CUSTOM_BACKGROUND">
        <item name="android:background">@drawable/custom_background</item>
    </style>
    <style name="SIMPLE_HEADER_TEXT_HOME">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">195dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SIMPLE_HEADER_WELCOME_TEXT_HOME">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/TextHomePage</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">220dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="CARD_STYLE">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>

    </style>
    <style name="CARD_STYLE_NEW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@color/DarkGreen</item>
    </style>

    <style name="TEXT_HEADER_AMBULANCE_PAGE">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ONLY_BUTTON_COLOR">
        <item name="android:backgroundTint">@color/DarkGreen</item>
    </style>
    <style name="DOCTOR_CARD_STYLE">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="DOCTOR_CARD_STYLE_TOW">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="TEXT_CARD_STYLE">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="RECYCLER_STYLE">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="NEW_BUTTON_COLOR">
        <item name="android:backgroundTint">@color/DarkGreen</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="THEME_SWITCH">
        <item name="android:thumb">@drawable/smaller_light_mode</item>
        <item name="thumbTint">@color/black</item>
        <item name="trackTint">@color/lavender</item>
    </style>
    <style name="NAV_BAR_STYLE">
        <item name="itemBackground">@color/colorPrimaryDark</item>
        <item name="itemIconTint">@drawable/selector</item>
        <item name="itemTextColor">@drawable/selector</item>
    </style>
</resources>