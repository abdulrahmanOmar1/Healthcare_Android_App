<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".BookingDetailsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="220dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SCREEN"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/txtAppintmentDeatailes"
                style="@style/TEXT_HEADER_AMBULANCE_PAGE"
                android:text="تفاصيل الحجز"

                />

            <ImageView
                android:id="@+id/imgBtnBack"
                style="@style/Backbtn"
                android:onClick="BackbtnDetails"
                app:srcCompat="@drawable/newback" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dashboard"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scode_profile"
            android:gravity="right"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الموعد"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/appontmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" الساعه 8 صباحا "
                    android:textSize="26sp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:gravity="right"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الطبيب"
                    android:textSize="19dp"/>

                <TextView
                    android:id="@+id/appontmentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-4-2004 ، يوم السبت"
                    android:textSize="26sp"
                    />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:gravity="right"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الحاله"
                    android:textSize="19dp"/>

                <TextView
                    android:id="@+id/appontmentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تمت المراجعة"
                    android:textSize="26sp"
                    />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                style="@style/NAV_BAR_STYLE"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/menu_navigation"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

