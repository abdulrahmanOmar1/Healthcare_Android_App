<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".UserProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            style="@style/RECTANGLE_ROUND"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/pay"
                style="@style/TEXT_HEADER_AMBULANCE_PAGE"
                android:layout_marginStart="80dp"
                android:text="الصفحة الشخصية" />

            <ImageView
                android:id="@+id/imgBtnBack"
                style="@style/Backbtn"
                android:layout_marginTop="35dp"
                android:onClick="btnSetting"
                app:srcCompat="@drawable/editprofile" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/userphoto"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scode_profile"
            android:gravity="center"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الأسم"
                    android:textSize="19dp"
                    style="@style/SIMPLE_TEXT_COLOR"/>
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المستخدم"
                    style="@style/SIMPLE_TEXT_COLOR"
                    android:textStyle="bold"
                    android:textSize="26sp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:gravity="center"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الرقم الجامعي"
                    style="@style/SIMPLE_TEXT_COLOR"
                    android:textSize="19dp"/>

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1201811"
                    style="@style/SIMPLE_TEXT_COLOR"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                style="@style/NAV_BAR_STYLE"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/menu_navigation"
                />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>