<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/default_back"
    android:layout_height="match_parent"
    tools:context=".contactUsPage">


    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/contact" />
    <ImageView
        android:id="@+id/imgBtnBack"
        style="@style/Backbtn"
        android:onClick="btnBackContactPage"
        app:srcCompat="@drawable/newback" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_img"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="12dp"
        android:elevation="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layoutDirection="rtl"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/PhoneImage"
                    android:layout_width="34dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    />

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/PhoneImage"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="الهاتف الارضي"
                        android:textStyle="bold"
                        style="@style/SIMPLE_HINT_TEXT_COLOR"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:text="022982151"
                        android:textColor="@color/openblue"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/phone2Image"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/LinearLayout1"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    />
                <LinearLayout
                    android:id="@+id/LinearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/LinearLayout1"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/phone2Image">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        style="@style/SIMPLE_HINT_TEXT_COLOR"
                        android:text=" الهاتف الخلوي" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:text="0592982001"
                        android:textColor="@color/openblue"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/emailImage"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/LinearLayout2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/email"
                    />
                <LinearLayout
                    android:id="@+id/LinearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/LinearLayout2"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/emailImage">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        style="@style/SIMPLE_HINT_TEXT_COLOR"
                        android:text="البريد الالكتروني" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:text="aboodomaral@gmail.com"
                        android:textColor="@color/openblue"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_marginTop="200dp"
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ritaj"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="btnritaj"
                            android:layout_marginStart="80dp"
                            android:src="@drawable/ritaj" />
                        <ImageView
                            android:id="@+id/goole"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="20dp"
                            android:onClick="btngoogle"
                            android:src="@drawable/google" />

                        <ImageView
                            android:id="@+id/facebook"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="-40dp"
                            android:onClick="btnfacbooke"
                            android:src="@drawable/facebook" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/NAV_BAR_STYLE"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_navigation"
            />

    </RelativeLayout>
</RelativeLayout>